{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/packages/testing/file.ts"],
  "globalSetup": "<rootDir>/packages/testing/setup.ts",
  "globalTeardown": "<rootDir>/packages/testing/stop.ts",
  "moduleNameMapper": {
    "^@packages/(.*)$": "<rootDir>/packages/$1"
  }
}
